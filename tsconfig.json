{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"rootDir": "src",
		"outDir": "dist",
		"strict": true,
		"noEmit": true,
		"verbatimModuleSyntax": true,
		"allowImportingTsExtensions": true,
		"types": ["bun-types"],
		"resolveJsonModule": true
	},
	"include": ["src/**/*.ts", "index.ts"]
}
