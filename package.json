{
	"name": "@dxta-dev/clankers",
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"postinstall": "node ./scripts/postinstall.js || bun ./scripts/postinstall.js",
		"build": "bun run build:opencode",
		"build:opencode": "bun build ./index.ts --outdir dist --target bun --format esm",
		"build:claude": "bun build ./claude-code.ts --outdir dist --target bun --format esm",
		"build:cursor": "bun build ./cursor.ts --outdir dist --target bun --format esm",
		"check": "tsc --noEmit",
		"lint": "biome lint .",
		"format": "biome format --write ."
	},
	"dependencies": {
		"@opencode-ai/plugin": "1.1.30",
		"better-sqlite3": "11.7.0",
		"zod": "4.3.5"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^22.10.2",
		"typescript": "^5.9.3"
	}
}
